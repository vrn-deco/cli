{
  "private": true,
  "name": "vrn-cli",
  "license": "MIT",
  "author": "Cphayim <i@cphayim.me>",
  "repository": "git@github.com:vrn-deco/vrn-cli.git",
  "workspaces": [
    "packages/*",
    "commands/*"
  ],
  "scripts": {
    "boot": "lerna bootstrap",
    "clean": "lerna exec \"rimraf lib coverage tsconfig.tsbuildinfo\" && lerna clean --yes",
    "build": "lerna run --stream --sort build",
    "test": "exit 0;",
    "commit": "git-cz",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "lint": "eslint \"packages/**/*.ts\" \"commands/**/*.ts\""
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "commitizen": "^4.2.4",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "2.3.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {}
}
