{
  "name": "vrn-cli-monorepo",
  "private": true,
  "author": "Cphayim <i@cphayim.me>",
  "repository": "git@github.com:vrn-deco/cli.git",
  "license": "MIT",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "packageManager": "pnpm@7.17.1",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "clean": "tsx scripts/clean.ts --build --deps",
    "clean:build": "tsx scripts/clean.ts --build",
    "clean:deps": "tsx scripts/clean.ts --deps",
    "build": "tsx scripts/build.ts --no-cache",
    "test:unit": "tsx scripts/test.ts",
    "test:unit:changed": "tsx scripts/test.ts --changed main",
    "test:coverage": "tsx scripts/test.ts --coverage",
    "lint": "eslint packages/ --ext .ts --fix --ignore-path .gitignore",
    "format": "prettier --write --parser typescript \"packages/**/*.ts\"",
    "commit": "git add . && cz",
    "ch:add": "tsx scripts/changeset.ts --add",
    "ch:version": "tsx scripts/changeset.ts --version"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint",
      "prettier --write --parser typescript"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@ombro/eslint-config-typescript": "^0.1.2",
    "@ombro/logger": "^1.5.5",
    "@ombro/tsconfig": "^1.4.2",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.10",
    "@vitest/coverage-c8": "^0.25.3",
    "@vitest/ui": "^0.25.3",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.29.0",
    "execa": "^6.1.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "tsx": "^3.12.1",
    "typescript": "^4.8.2",
    "vitest": "^0.25.3"
  }
}
