{
  "name": "vrn-cli-monorepo",
  "private": true,
  "author": "Cphayim <i@cphayim.me>",
  "repository": "git@github.com:vrn-deco/cli.git",
  "license": "MIT",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "packageManager": "pnpm@8.15.9",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "clean": "tsx scripts/clean.ts --build --deps",
    "clean:build": "tsx scripts/clean.ts --build",
    "clean:deps": "tsx scripts/clean.ts --deps",
    "build": "tsx scripts/build.ts --no-cache",
    "test:unit": "tsx scripts/test.ts",
    "test:unit:changed": "tsx scripts/test.ts --changed main",
    "test:coverage": "tsx scripts/test.ts --coverage",
    "lint": "eslint packages/ --ext .ts --fix --ignore-path .gitignore",
    "format": "prettier --write --parser typescript \"packages/**/*.ts\"",
    "cs:add": "tsx scripts/changeset.ts --add",
    "cs:version": "tsx scripts/changeset.ts --version",
    "commit": "git add . && cz",
    "release": "pnpm build && pnpm -r publish"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint",
      "prettier --write --parser typescript"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@ombro/eslint-config-typescript": "^0.1.5",
    "@ombro/logger": "^1.5.5",
    "@ombro/tsconfig": "^2.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^18.19.59",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "execa": "^6.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^14.0.1",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "tsx": "^4.19.1",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
