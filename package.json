{
  "name": "vrn-cli-monorepo",
  "private": true,
  "author": "Cphayim <i@cphayim.me>",
  "repository": "git@github.com:vrn-deco/cli.git",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "^14.13.1 || >=16.0.0",
    "pnpm": "^6.28.0"
  },
  "packageManager": "pnpm@6.28.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "clean": "esmo scripts/clean.ts --build --deps",
    "clean:build": "esmo scripts/clean.ts --build",
    "clean:deps": "esmo scripts/clean.ts --deps",
    "build": "esmo scripts/build.ts --no-cache",
    "test:unit": "esmo scripts/test.ts",
    "test:coverage": "esmo scripts/test.ts --coverage",
    "lint": "eslint packages/*/src/**.ts",
    "format": "prettier --write --parser typescript \"packages/**/*.ts\"",
    "commit": "git add . && cz",
    "ch:add": "esmo scripts/changeset.ts --add",
    "ch:version": "esmo scripts/changeset.ts --version"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint",
      "prettier --write --parser typescript"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.21.1",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@jest/globals": "^27.5.1",
    "@ombro/logger": "^1.5.5",
    "@ombro/ts-config": "^1.4.0",
    "@swc/core": "^1.2.158",
    "@swc/jest": "^0.2.20",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "esno": "^0.14.1",
    "execa": "^6.1.0",
    "husky": "^6.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^11.2.6",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  }
}
