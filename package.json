{
  "name": "vrn-cli-monorepo",
  "private": true,
  "author": "Cphayim <i@cphayim.me>",
  "repository": "git@github.com:vrn-deco/vrn-cli.git",
  "license": "MIT",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0",
    "pnpm": "^6.26.0"
  },
  "packageManager": "pnpm@6.26.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "clean": "pnpm clean:build && pnpm clean:dep",
    "clean:build": "pnpm -r exec -- rimraf lib coverage tsconfig.tsbuildinfo",
    "clean:dep": "pnpm -wr exec -- rimraf node_modules",
    "build": "pnpm clean:build && pnpm -r build",
    "test": "exit 0;",
    "lint": "eslint --ext .ts packages/*/src/**.ts",
    "format": "prettier --write --parser typescript \"packages/**/*.ts\"",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint",
      "prettier --write --parser typescript"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.19.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "execa": "^6.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.2.6",
    "prettier": "2.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  }
}
